{
    "name": "fftcg-collection-api",
    "version": "0.1.0",
    "description": "",
    "main": "src/app.ts",
    "scripts": {
        "start": "node build/app.js",
        "build": "tsc",
        "check": "tsc --noemit",
        "watch": "nodemon",
        "eslint": "eslint --ext .ts ./src ./test",
        "eslint:fix": "eslint --ext .ts --fix ./src ./test",
        "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
        "migration:run": "npm run typeorm -- migration:run",
        "migration:generate": "npm run typeorm -- migration:generate -n",
        "schema:sync:test": "npm run typeorm -- schema:sync -c test",
        "fixture": "fixtures ./fixtures -s -c ./ormconfig.js --require=ts-node/register",
        "fixture:test": "npm run schema:sync:test && fixtures ./fixtures -cn test -s -c ./ormconfig.js --require=ts-node/register",
        "test:full": "npm run test:unit && npm run test:func",
        "test:func": "npm run fixture:test && NODE_ENV=test npx mocha -r ts-node/register test/controllers/**/*.ts",
        "test:unit": "npx mocha -r ts-node/register --exclude test/controllers/**/*.ts test/**/*.ts"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:micriber/fftcg-collection-api.git"
    },
    "author": "Micriber",
    "license": "ISC",
    "dependencies": {
        "express": "^4.17.1",
        "joi": "^17.2.0",
        "pg": "^8.3.0",
        "typeorm": "^0.2.25"
    },
    "devDependencies": {
        "@types/chai": "^4.2.12",
        "@types/express": "^4.17.7",
        "@types/mocha": "^8.0.2",
        "@types/node": "^14.0.27",
        "@typescript-eslint/eslint-plugin": "^3.9.0",
        "@typescript-eslint/parser": "^3.9.0",
        "chai": "^4.2.0",
        "chai-http": "^4.3.0",
        "eslint": "^7.7.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "mocha": "^8.1.1",
        "nodemon": "^2.0.4",
        "ts-node": "^8.10.2",
        "typeorm-fixtures-cli": "^1.7.1",
        "typescript": "^3.9.7"
    }
}
