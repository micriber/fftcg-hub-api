{
    "compilerOptions": {
        "lib": ["ES2019"],
        "module": "commonjs",
        "target": "ES2019",
        "esModuleInterop": true,
        "strict": true,
        "outDir": "build",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "@types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ]
}
